# HTTP port (published by docker compose)
PORT=3080

# Admin UI token (send as header: X-Admin-Token)
ADMIN_TOKEN=please-change-me

# Paths inside container (no change needed)
DB_PATH=data/app.db
KEYS_DIR=keys

# Offline grace token TTL in days
OFFLINE_TOKEN_TTL_DAYS=10

# CORS origins:
#   - "*" (wildcard, credentials werden automatisch deaktiviert)
#   - CSV: http://localhost:3000,https://app.example.com
#   - JSON: ["http://localhost:3000","https://app.example.com"]
CORS_ORIGINS=*
