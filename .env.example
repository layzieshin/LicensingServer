# Ports (Hostport:Containerport wird im compose gemappt)
PORT_ADMIN=3080
PORT_API=3445

# SQLite im gemounteten Volume
DATABASE_URL=sqlite:////srv/data/db/license.db

# Session/Cookie-Secret (ändern!)
SESSION_SECRET=please-change-this-session-secret

# Initialer Admin – wird beim ersten Start angelegt, wenn keine Admins existieren
INITIAL_ADMIN_USER=admin
INITIAL_ADMIN_PASSWORD=ChangeMe123!

# Standardbegrenzung der Maschinen pro Lizenz
LICENSE_DEFAULT_MAX_MACHINES=2
